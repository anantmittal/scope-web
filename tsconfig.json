{
    "compilerOptions": {
        "target": "es6",
        "module": "es6",

        "baseUrl": ".",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true,
        "jsx": "react",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "outDir": "./build/",
        "paths": {
            "src/*": ["src/*"]
        },
        "sourceMap": true,
        "strict": true
    },

    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
