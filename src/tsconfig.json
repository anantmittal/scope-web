{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true
  },

  "include": [
    "**/*"
  ]
}
