{
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"$id": "https://uwscope.org/schemas/activity",
	"title": "IActivity",
	"description": "IActivity Type",
	"type": "object",
	"properties": {
		"_id": {
			"type": "string"
		},
		"_type": {
			"const": "activity"
		},
		"_set_id": {
			"type": "string"
		},
		"_rev": {
			"type": "number"
		},
		"activityId": {
			"type": "string"
		},
		"name": {
			"type": "string"
		},
		"value": {
			"type": "string"
		},
		"lifeareaId": {
			"type": "string"
		},
		"startDateTime": {
			"$ref": "/schemas/datetime#/properties/datetime"
		},
		"timeOfDay": {
			"type": "number",
			"minimum": 0,
			"exclusiveMaximum": 24
		},
		"hasReminder": {
			"type": "boolean"
		},
		"reminderTimeOfDay": {
			"type": "number",
			"minimum": 0,
			"exclusiveMaximum": 24
		},
		"hasRepetition": {
			"type": "boolean"
		},
		"repeatDayFlags": {
			"$ref": "/schemas/enums#/properties/dayOfWeekFlags"
		},
		"isActive": {
			"type": "boolean"
		}
	},
	"additionalProperties": false,
	"required": ["_type", "name", "value", "lifeareaId", "startDateTime", "timeOfDay", "hasReminder", "hasRepetition"]
}
