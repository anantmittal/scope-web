{
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"$id": "https://uwscope.org/schemas/safety-plan",
	"title": "ISafetyPlan",
	"description": "ISafetyPlan Type",
	"type": "object",
	"properties": {
		"_type": { "const": "safetyPlan" },
		"_rev": { "type": "number" },
		"assigned": {
			"type": "boolean"
		},
		"assignedDate": {
			"$ref": "/schemas/datetime#/properties/date"
		},
		"lastUpdatedDate": {
			"$ref": "/schemas/datetime#/properties/date"
		},
		"reasonsForLiving": {
			"type": "string"
		},
		"warningSigns": {
			"type": "array",
			"items": { "type": "string" }
		},
		"copingStrategies": {
			"type": "array",
			"items": { "type": "string" }
		},
		"distractions": {
			"type": "array",
			"items": {
				"anyOf": [
					{
						"type": "string"
					},
					{
						"$ref": "/schemas/contact"
					}
				]
			}
		},
		"supporters": {
			"type": "array",
			"items": {
				"$ref": "/schemas/contact"
			}
		},
		"professionalSupporters": {
			"type": "array",
			"items": {
				"$ref": "/schemas/contact"
			}
		},
		"urgentServices": {
			"type": "array",
			"items": {
				"$ref": "/schemas/contact"
			}
		},
		"safeEnvironment": {
			"type": "array",
			"items": { "type": "string" }
		}
	},
	"additionalProperties": false,
	"required": ["_type", "assigned", "assignedDate"]
}
