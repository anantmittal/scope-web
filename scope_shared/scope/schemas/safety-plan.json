{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://uwscope.org/schemas/safety-plan",
    "title": "ISafetyPlan",
    "description": "ISafetyPlan Type",
    "type": "object",
    "properties": {
        "_id": {
            "type": "string"
        },
        "_type": { "const": "safetyPlan" },
        "_rev": { "type": "number" },
        "assigned": {
            "type": "boolean"
        },
        "assignedDateTime": {
            "$ref": "/schemas/datetime#/properties/datetime"
        },
        "lastUpdatedDateTime": {
            "$ref": "/schemas/datetime#/properties/datetime"
        },
        "reasonsForLiving": {
            "type": "string"
        },
        "warningSigns": {
            "type": "array",
            "items": { "type": "string" }
        },
        "copingStrategies": {
            "type": "array",
            "items": { "type": "string" }
        },
        "socialDistractions": {
            "type": "array",
            "items": {
                "$ref": "/schemas/contact"
            }
        },
        "settingDistractions": {
            "type": "array",
            "items": { "type": "string" }
        },
        "supporters": {
            "type": "array",
            "items": {
                "$ref": "/schemas/contact"
            }
        },
        "professionals": {
            "type": "array",
            "items": {
                "$ref": "/schemas/contact"
            }
        },
        "urgentServices": {
            "type": "array",
            "items": {
                "$ref": "/schemas/contact"
            }
        },
        "safeEnvironment": {
            "type": "array",
            "items": { "type": "string" }
        }
    },
    "additionalProperties": false,
    "required": ["_type", "assigned", "assignedDateTime"]
}
