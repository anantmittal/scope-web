{
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"$id": "https://uwscope.org/schemas/patient",
	"title": "IPatient",
	"description": "Holds all the patient data",
	"type": "object",
	"properties": {
		"_id": { "type": "string" },
		"_type": { "const": "patient" },
		"identity": {
			"type": "object",
			"description": "IIdentity schema",
			"$ref": "/schemas/identity"
		},
		"patientProfile": {
			"type": "object",
			"description": "IPatientProfile schema",
			"$ref": "/schemas/patient-profile"
		},
		"clinicalHistory": {
			"type": "object",
			"description": "IClinicalHistory schema",
			"$ref": "/schemas/clinical-history"
		},
		"valuesInventory": {
			"type": "object",
			"description": "IValuesInventory schema",
			"$ref": "/schemas/values-inventory"
		},
		"safetyPlan": {
			"type": "object",
			"description": "ISafetyPlan schema",
			"$ref": "/schemas/safety-plan"
		},
		"sessions": {
			"$ref": "/schemas/sessions"
		},
		"caseReviews": {
			"type": "array",
			"items": {
				"$ref": "/schemas/case-review"
			}
		},
		"assessments": {
			"type": "array",
			"items": {
				"$ref": "/schemas/assessment"
			}
		},
		"scheduledAssessments": {
			"type": "array",
			"items": {
				"$ref": "/schemas/scheduled-assessment"
			}
		},
		"assessmentLogs": {
			"type": "array",
			"items": {
				"$ref": "/schemas/assessment-log"
			}
		},
		"activities": {
			"type": "array",
			"items": {
				"$ref": "/schemas/activity"
			}
		},
		"scheduledActivities": {
			"type": "array",
			"items": {
				"$ref": "/schemas/scheduled-activity"
			}
		},
		"activityLogs": {
			"type": "array",
			"items": {
				"$ref": "/schemas/activity-log"
			}
		},
		"moodLogs": {
			"type": "array",
			"items": {
				"$ref": "/schemas/mood-log"
			}
		}
	},
	"additionalProperties": false,
	"required": ["type", "identity", "patientProfile"]
}
