{
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"$id": "https://uwscope.org/schemas/assessment",
	"title": "IAssessment",
	"description": "IAssessment Type",
	"type": "object",
	"properties": {
		"_id": {
			"type": "string"
		},
		"_type": {
			"const": "assessment"
		},
		"_set_id": {
			"type": "string"
		},
		"_rev": {
			"type": "number"
		},
		"assessmentId": {
			"type": "string",
			"enum": ["gad-7", "medication", "mood", "phq-9"]
		},
		"assigned": {
			"type": "boolean"
		},
		"assignedDateTime": {
			"$ref": "/schemas/datetime#/properties/datetime"
		},
		"dayOfWeek": {
			"$ref": "/schemas/enums#/properties/dayOfWeek"
		},
		"frequency": {
			"$ref": "/schemas/enums#/properties/assessmentFrequency"
		}
	},
	"additionalProperties": false,
	"required": ["_type", "_set_id", "assessmentId", "assigned", "assignedDateTime"],
	"allOf": [
		{
			"$ref": "#/$defs/daily-frequency-disallows-dayOfWeek"
		},
		{
			"$ref": "#/$defs/not-daily-frequency-requires-dayOfWeek"
		}
	],
	"$defs": {
		"daily-frequency-disallows-dayOfWeek": {
			"anyOf": [
				{
					"not": { "$ref": "#/$defs/frequency-is-daily" }
				},
				{
					"not": { "required": ["dayOfWeek"] }
				}
			]
		},
		"not-daily-frequency-requires-dayOfWeek": {
			"anyOf": [
				{
					"not": { "$ref": "#/$defs/frequency-is-not-daily" }
				},
				{
					"required": ["dayOfWeek"]
				}
			]
		},
		"frequency-is-daily": {
			"properties": {
				"frequency": {
					"const": "Daily"
				}
			},
			"required": ["frequency"]
		},
		"frequency-is-not-daily": {
			"properties": {
				"frequency": {
					"type": "string",
					"enum": ["Once a week", "Every 2 weeks", "Every 4 weeks"]
				}
			},
			"required": ["frequency"]
		}
	}
}
