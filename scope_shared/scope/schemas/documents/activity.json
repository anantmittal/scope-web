{
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"$id": "https://uwscope.org/schemas/documents/activity",
	"title": "IActivity",
	"description": "IActivity Type",
	"type": "object",
	"$comment": [
		"---------------------------------------",
		"Removed Pending Reminder Implementation",
		"---------------------------------------",
		{
			"reminderTimeOfDay": {
				"type": "number",
				"minimum": 0,
				"exclusiveMaximum": 24
			}
		}
	],
	"properties": {
		"_id": {
			"type": "string"
		},
		"_type": {
			"const": "activity"
		},
		"_set_id": {
			"type": "string"
		},
		"_rev": {
			"type": "number"
		},
		"activityId": {
			"type": "string"
		},
		"name": {
			"type": "string"
		},
		"value": {
			"type": "string"
		},
		"lifeareaId": {
			"type": "string"
		},
		"startDateTime": {
			"$ref": "/schemas/utils/datetime#/properties/datetime"
		},
		"timeOfDay": {
			"type": "number",
			"minimum": 0,
			"exclusiveMaximum": 24
		},
		"hasReminder": {
			"type": "boolean"
		},
		"hasRepetition": {
			"type": "boolean"
		},
		"repeatDayFlags": {
			"$ref": "/schemas/utils/enums#/properties/dayOfWeekFlags"
		},
		"isActive": {
			"type": "boolean"
		},
		"isDeleted": {
			"type": "boolean"
		}
	},
	"additionalProperties": false,
	"required": [
		"_type",
		"name",
		"value",
		"lifeareaId",
		"startDateTime",
		"timeOfDay",
		"hasReminder",
		"hasRepetition",
		"isActive",
		"isDeleted"
	],
	"$comment": [
		"---------------------------------------",
		"Removed Pending Reminder Implementation",
		"---------------------------------------",
		[
			{
				"$ref": "#/$defs/hasReminder-is-true-requires-reminderTimeOfDay"
			},
			{
				"$ref": "#/$defs/hasReminder-is-false-disallows-reminderTimeOfDay"
			}
		]
	],
	"allOf": [
		{
			"$ref": "#/$defs/hasReminder-is-false"
		},
		{
			"$ref": "#/$defs/hasRepetition-is-true-requires-repeatDayFlags"
		},
		{
			"$ref": "#/$defs/hasRepetition-is-false-disallows-repeatDayFlags"
		}
	],
	"$comment": [
		"---------------------------------------",
		"Removed Pending Reminder Implementation",
		"---------------------------------------",
		{
			"hasReminder-is-true": {
				"properties": {
					"hasReminder": {
						"const": true
					}
				},
				"required": [
					"hasReminder"
				]
			},
			"hasReminder-is-false-disallows-reminderTimeOfDay": {
				"anyOf": [
					{
						"not": {
							"$ref": "#/$defs/hasReminder-is-false"
						}
					},
					{
						"not": {
							"required": [
								"reminderTimeOfDay"
							]
						}
					}
				]
			},
			"hasReminder-is-true-requires-reminderTimeOfDay": {
				"anyOf": [
					{
						"not": {
							"$ref": "#/$defs/hasReminder-is-true"
						}
					},
					{
						"required": [
							"reminderTimeOfDay"
						]
					}
				]
			}
		}
	],
	"$defs": {
		"hasReminder-is-false": {
			"properties": {
				"hasReminder": {
					"const": false
				}
			},
			"required": ["hasReminder"]
		},
		"hasRepetition-is-false": {
			"properties": {
				"hasRepetition": {
					"const": false
				}
			},
			"required": [
				"hasRepetition"
			]
		},
		"hasRepetition-is-true": {
			"properties": {
				"hasRepetition": {
					"const": true
				}
			},
			"required": [
				"hasRepetition"
			]
		},
		"hasRepetition-is-false-disallows-repeatDayFlags": {
			"anyOf": [
				{
					"not": {
						"$ref": "#/$defs/hasRepetition-is-false"
					}
				},
				{
					"not": {
						"required": [
							"repeatDayFlags"
						]
					}
				}
			]
		},
		"hasRepetition-is-true-requires-repeatDayFlags": {
			"anyOf": [
				{
					"not": {
						"$ref": "#/$defs/hasRepetition-is-true"
					}
				},
				{
					"required": [
						"repeatDayFlags"
					]
				}
			]
		}
	}
}
