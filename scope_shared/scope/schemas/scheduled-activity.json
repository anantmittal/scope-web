{
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"$id": "https://uwscope.org/schemas/scheduled-activity",
	"title": "IScheduledActivity",
	"description": "IScheduledActivity Type",
	"type": "object",
	"properties": {
		"_id": {
			"type": "string"
		},
		"_type": {
			"const": "scheduledActivity"
		},
		"_set_id": {
			"type": "string"
		},
		"_rev": {
			"type": "number"
		},
		"_deleted": {
			"type": "boolean"
		},
		"scheduledActivityId": {
			"$ref": "/schemas/scheduled-item#/properties/scheduleId"
		},
		"dueDate": {
			"$ref": "/schemas/scheduled-item#/properties/dueDate"
		},
		"dueType": {
			"$ref": "/schemas/scheduled-item#/properties/dueType"
		},
		"activityId": {
			"type": "string"
		},
		"activityName": {
			"type": "string"
		},
		"timeOfDay": {
			"type": "number",
			"minimum": 0,
			"exclusiveMaximum": 24
		},
		"reminderTimeOfDay": {
			"type": "number",
			"minimum": 0,
			"exclusiveMaximum": 24
		},
		"completed": {
			"type": "boolean"
		}
	},
	"additionalProperties": false,
	"required": ["_type", "dueDate", "dueType", "activityId", "completed"]
}
